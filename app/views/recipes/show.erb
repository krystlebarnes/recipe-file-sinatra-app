<h1><%=@recipe.name%></h1>
<h5>by <a href='/users/<%= @user.slug %>'><%=@user.name%></a></h5>
<br>
<div>
<p><i><%=@recipe.description%></i></p>
<p>Serving Size: <%=@recipe.serving_size%> servings<br>
  <%if @recipe.prep_time%>
  Prep Time: <%=@recipe.prep_time%> minutes<br>
  <%end%>
  <%if @recipe.cook_time%>
  Cook Time: <%=@recipe.cook_time%> minutes<br>
  <%end%>
  <%if @recipe.prep_time || @recipe.cook_time%>
  Total Time: <%if @recipe.prep_time && @recipe.cook_time%>
                <%=@recipe.prep_time + @recipe.cook_time%> minutes<br>
              <%elsif @recipe.prep_time%>
                <%=@recipe.prep_time%> minutes<br>
              <%else%>
                <%=@recipe.cook_time%> minutes<br>
              <%end%>
  <%end%>


</p>
<h3>Ingredients:</h3>
<p>
  <%=line_breaker(@recipe.ingredients)%>
</p>
<h3>Instructions:</h3>
<p>
  <%=line_breaker(@recipe.instructions)%>
</p>
</div>
<%if current_user == @user%>
<br>
<div>
<p>
  <a class="button submit" href="/recipes/<%= @recipe.id %>/edit">Edit Recipe</a>
  <form action="/recipes/<%= @recipe.id %>/delete" method="post">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input class="button submit" type="submit" id="submit" value="Delete Recipe">
  </form>
  </p>
</div>
<%end%>
